//exponent
{config.device_option} {config.scalar_function} exp_gen({config.scalar_parameter} a) {config.const_option} {{return {config.expmath}(a);}}

//derivatives
{config.device_option} {config.scalar_function} dexp_da({config.scalar_parameter} a) {config.const_option} {{return exp_gen(a);}}
{config.device_option} {config.scalar_function} exp_chain({config.scalar_parameter} a, {config.scalar_parameter} a_perturbation) {config.const_option} {{return a_perturbation * {config.expmath}(a);}}
