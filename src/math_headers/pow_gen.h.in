//pow
{config.device_option} {config.scalar_function} pow_gen({config.scalar_parameter} a, {config.scalar_parameter} b) {config.const_option} {{return {config.powmath}(a, b);}}
// Partial derivative of a^b with respect to a
{config.device_option} {config.scalar_function} dpow_da({config.scalar_parameter} a, {config.scalar_parameter} b) {config.const_option} {{ return b * {config.powmath}(a, b - {scalar_cast}(1));}}
// Partial derivative of a^b with respect to b
{config.device_option} {config.scalar_function} dpow_db({config.scalar_parameter} a, {config.scalar_parameter} b) {config.const_option} {{ return {config.powmath}(a, b) * {logmath}(a);}}
