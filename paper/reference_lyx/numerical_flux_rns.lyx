\begin_layout Section
Chemically Reacting Navier-Stokes Equations
\begin_inset CommandInset label
LatexCommand label
name "subsec:Chemically-Reacting-Navier-Stokes"

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\Omega\subset\mathbb{R}^{d}$
\end_inset

 be a given 
\begin_inset Formula $d$
\end_inset

-dimensional domain with boundary 
\begin_inset Formula $\partial\Omega$
\end_inset

, over which an outward oriented normal 
\begin_inset Formula $n:\partial\Omega\rightarrow\mathbb{R}^{d}$
\end_inset

 is defined, and 
\begin_inset Formula $T\subset\mathbb{R}^{+}$
\end_inset

 is a given temporal interval.
 We consider the nonlinear conservation law governing the unsteady chemically
 reacting Navier-Stokes equations, in strong form, defined for piecewise
 smooth, 
\begin_inset Formula $\mathbb{R}^{m}$
\end_inset

-valued functions 
\begin_inset Formula $y$
\end_inset

, and gradient 
\begin_inset Formula $\nabla y$
\end_inset

, given as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\revisionmath{\frac{\partial y}{\partial t}+\nabla\cdot\mathcal{F}\left(y,\nabla y\right)-\mathcal{S}\left(y\right)=0} & \textup{ in }\revisionmath{\Omega\times T},\label{eq:conservation-law-strong-form}\\
\revisionmath{y\left(\cdot,t_{0}\right)-y_{0}=0} & \textup{ in }\revisionmath{\Omega},\label{eq:conservation-law-initial-condition}\\
\revisionmath{n\cdot\mathcal{F}\left(y,\nabla y\right)-n\cdot\mathcal{F}_{\partial}\left(y,\nabla y\right)=0} & \textup{ on }\revisionmath{\partial\Omega\times T},\label{eq:conservation-law-flux-boundary-condition}\\
\revisionmath{G_{\partial}\left(y_{\partial}\right):\left(y^{+}-y_{\partial}\right)\otimes n=0} & \textup{ on }\revisionmath{\partial\Omega\times T},\label{eq:conservation-law-state-boundary-condition}
\end{align}

\end_inset

where 
\begin_inset Formula $t$
\end_inset

 denotes time, 
\begin_inset Formula $\mathcal{F}:\mathbb{R}^{m}\rightarrow\mathbb{R}^{m\times d}$
\end_inset

 is a given flux function, 
\begin_inset Formula $\mathcal{S}:\mathbb{R}^{m}\rightarrow\mathbb{R}^{m}$
\end_inset

 is a given source term.
 The initial conditions at time 
\begin_inset Formula $t_{0}$
\end_inset

 are given by 
\begin_inset Formula $y_{0}$
\end_inset

 in Equation
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:conservation-law-initial-condition"

\end_inset

.
 The flux function 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
F\left(y,\nabla y\right)=\left(\mathcal{F}^{c}\left(y\right)-\mathcal{F}^{v}\left(y,\nabla y\right)\right)\label{eq:flux_function}
\end{equation}

\end_inset

is defined in terms of the convective flux 
\begin_inset Formula $\mathcal{F}^{c}\left(y\right)$
\end_inset

, which is only a function of the state 
\begin_inset Formula $y$
\end_inset

, and viscous flux 
\begin_inset Formula $\mathcal{F}^{v}\left(y,\nabla y\right)$
\end_inset

, which is a function of the state and the gradient, 
\begin_inset Formula $\nabla y$
\end_inset

.
 Furthermore, the viscous flux can be written as
\begin_inset Formula 
\begin{equation}
\mathcal{F}^{v}\left(y,\nabla y\right)=G\left(y\right):\nabla y\label{eq:viscous-flux-homogeneity-tensor}
\end{equation}

\end_inset

where 
\begin_inset Formula $G\left(y\right)=\mathcal{F}_{\nabla y}^{v}$
\end_inset

 is its the partial linearization with respect to the gradient, 
\begin_inset Formula $\nabla y$
\end_inset

, which is sometimes referred to as the homogeneity tensor
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "Har13"
literal "false"

\end_inset

.
 
\end_layout

\begin_layout Standard
Following Hartmann and Leicht
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "Har13"
literal "false"

\end_inset

, the boundary conditions given by Equation
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:conservation-law-flux-boundary-condition"

\end_inset

 are imposed through the boundary flux, 
\begin_inset Formula $\mathcal{F}_{\partial}\left(y,\nabla y\right)=\mathcal{F}_{\partial}^{c}\left(y\right)-\mathcal{F}_{\partial}^{\nu}\left(y,\nabla y\right)$
\end_inset

, where 
\begin_inset Formula $\mathcal{F}_{\partial}^{c}\left(y\right)$
\end_inset

 and 
\begin_inset Formula $\mathcal{F}_{\partial}^{\nu}\left(y,\nabla y\right)$
\end_inset

 are the convective and viscous fluxes, respectively, at the boundary.
 The condition on the state at the boundary given by Equation
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:conservation-law-state-boundary-condition"
plural "false"
caps "false"
noprefix "false"

\end_inset

 is imposed through the boundary state 
\begin_inset Formula $y_{\partial}$
\end_inset

 and the boundary modified homogeneity tensor, 
\begin_inset Formula $G_{\partial}\left(y_{\partial}\right)$
\end_inset

.
 A detailed description of the boundary conditions corresponding to the
 unsteady chemically reacting Navier-Stokes equations is given in Section
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:Discretization"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
\end_layout

\begin_layout Standard
The chemically reacting Navier-Stokes flow state variable is given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
y=\left(\rho v_{1},\ldots,\rho v_{d},\rho e_{t},C_{i},\ldots,C_{n_{s}}\right),\label{eq:reacting-navier-stokes-state}
\end{equation}

\end_inset

where 
\begin_inset Formula $m=d+n_{s}+1$
\end_inset

, 
\begin_inset Formula $n_{s}$
\end_inset

 is the number of thermally perfect species, 
\begin_inset Formula $\rho:\mathbb{R}^{n_{s}}\rightarrow\mathbb{R}$
\end_inset

 is density, 
\begin_inset Formula $\left(v_{1},\ldots,v_{d}\right):\mathbb{R}^{m}\rightarrow\mathbb{R}^{d}$
\end_inset

 is the velocity, 
\begin_inset Formula $e_{t}:\mathbb{R}^{m}\rightarrow\mathbb{R}$
\end_inset

 is the specific total energy, and 
\begin_inset Formula $C:\Omega\rightarrow\mathbb{R}^{n_{s}}$
\end_inset

 are the species concentrations.
 The density is calculated from the concentrations as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\rho=\sum_{i=1}^{n_{s}}W_{i}C_{i},\label{eq:density_definition}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\noindent
where 
\begin_inset Formula $W_{i}$
\end_inset

 is the molecular weight of species 
\begin_inset Formula $i$
\end_inset

.
\end_layout

\begin_layout Standard
The 
\begin_inset Formula $k$
\end_inset

-th spatial convective flux component is given by
\begin_inset Formula 
\begin{equation}
\mathcal{F}_{k}^{c}\left(y\right)=\left(\rho v_{k}v_{1}+p\delta_{k1},\ldots,\rho v_{k}v_{d}+p\delta_{kd},v_{k}\left(\rho e_{t}+p\right),v_{k}C_{1},\ldots,v_{k}C_{n_{s}}\right).\label{eq:reacting-navier-stokes-spatial-convective-flux-component}
\end{equation}

\end_inset

The pressure, 
\begin_inset Formula $p:\mathbb{R}^{m}\rightarrow\mathbb{R}$
\end_inset

, is calculated from the equation of state,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
p=R^{0}T\sum_{i=1}^{n_{s}}C_{i},\label{eq:EOS}
\end{equation}

\end_inset

where 
\begin_inset Formula $T:\mathbb{R}^{m}\rightarrow\mathbb{R}$
\end_inset

, is the temperature and 
\begin_inset Formula $R^{0}=8314.4621\,\mathrm{JKmol}^{-1}\mathrm{K}^{-1}$
\end_inset

 is the universal gas constant.
 The total energy, 
\begin_inset Formula $\rho e_{t}$
\end_inset

, is given as the sum of the internal and kinetic and energies as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\rho e_{t}=\rho u+\frac{1}{2}\sum_{k=1}^{d}\rho v_{k}v_{k},\label{eq:internal_energy_conserved_state}
\end{equation}

\end_inset

where 
\begin_inset Formula $\rho u:\mathbb{R}^{m}\rightarrow\mathbb{R}$
\end_inset

 is the internal energy.
 The internal energy is also defined as the mass weighted sum of thermally
 perfect species specific internal energies that are 
\begin_inset Formula $n_{p}$
\end_inset

-order polynomials with respect to temperature, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\rho u=\sum_{i=1}^{n_{s}}W_{i}C_{i}\sum_{k=0}^{n_{p}}a_{ik}T^{k}.\label{eq:internal_energy_polynomial}
\end{equation}

\end_inset

In this work, all thermodynamic polynomials are continuous refits of the
 analytic form from NASA’s polynomial representations
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "Mcb02"
literal "false"

\end_inset

.
\end_layout

\begin_layout Standard
The temperature is defined consistently to ensure equivalency between the
 definition of internal energy, 
\begin_inset Formula $\rho u$
\end_inset

, given by
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:internal_energy_conserved_state"
plural "false"
caps "false"
noprefix "false"

\end_inset

 and the definition given by
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:internal_energy_polynomial"
plural "false"
caps "false"
noprefix "false"

\end_inset

, i.e., find 
\begin_inset Formula $T$
\end_inset

 such that
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
0 & = & \rho u-\sum_{i=1}^{n_{s}}W_{i}C_{i}\sum_{k=1}^{K}a_{ik}T^{k},\nonumber \\
 & = & \left(\rho e_{t}-\frac{1}{2}\sum_{k=1}^{n}\rho v_{k}v_{k}\right)-\sum_{i=1}^{n_{s}}W_{i}C_{i}\sum_{k=1}^{K}a_{ik}T^{k}.\label{eq:newton_eq}
\end{eqnarray}

\end_inset

The temperature is computed such that the following is satisfied to machine
 precision for a given initial temperature:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\delta T=\frac{\rho u-\sum_{i=1}^{n_{s}}W_{i}C_{i}\sum_{k=1}^{K}a_{ik}T^{k}}{\frac{\partial\rho u}{\partial T}},\label{eq:temperature-decrement}
\end{equation}

\end_inset

where 
\begin_inset Formula $\delta T$
\end_inset

 is the temperature decrement corresponding to Newton's method and
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{\partial\rho u}{\partial T}=\sum_{i=1}^{n_{s}}W_{i}C_{i}\sum_{k=1}^{K}ka_{ik}T^{k-1}\label{eq:partial-u-partial-T}
\end{equation}

\end_inset

is the partial derivative of internal energy with respect to temperature,
 see
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand ref
reference "sec:Source-term-Jacobian"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
 In practice, we observe that the temperature converges within five nonlinear
 iterations with an initial guess of 
\begin_inset Formula $T=500$
\end_inset

 K.
 In our experience, divergence of the nonlinear solver very rarely occurs.
 In the case that the solution does diverge, the cause is attributed to
 other numerical issues such as negative concentrations.
 Once the temperature and state are known, the pressure is computed by evaluatin
g
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:EOS"
plural "false"
caps "false"
noprefix "false"

\end_inset

, thereby satisfying the thermodynamics state exactly.
 The convective flux
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:reacting-navier-stokes-spatial-convective-flux-component"
plural "false"
caps "false"
noprefix "false"

\end_inset

 can therefore be evaluated without computing the ratio of specific heats,
 
\begin_inset Formula $\gamma$
\end_inset

.
\end_layout

\begin_layout Standard
The 
\begin_inset Formula $k$
\end_inset

-th spatial component of the viscous flux is given by
\begin_inset Formula 
\begin{equation}
\mathcal{F}_{k}^{v}\left(y,\nabla y\right)=\left(\tau_{1k},\ldots,\tau_{dk},\sum_{j=1}^{d}\tau_{kj}v_{j}-W_{i}C_{i}h_{i}V_{ik}-q_{k},C_{1}V_{1k},\ldots,C_{n_{s}}V_{n_{s}k}\right),\label{eq:navier-stokes-viscous-flux-spatial-component}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\noindent
where 
\begin_inset Formula $q:\mathbb{R}^{m}\times\mathbb{R}^{m\times d}\rightarrow\mathbb{R}^{d}$
\end_inset

 is the thermal heat flux, 
\begin_inset Formula $\tau:\mathbb{R}^{m}\times\mathbb{R}^{m\times d}\rightarrow\mathbb{R}^{d\times d}$
\end_inset

 is the viscous stress tensor, 
\begin_inset Formula $\left(h_{1},\ldots,h_{n_{s}}\right):\mathbb{R}^{m}\rightarrow\mathbb{R}^{n_{s}}$
\end_inset

 are the species specific enthalpies, and 
\begin_inset Formula $\left(\left(V_{11},\dots,V_{1d}\right),\dots,\left(V_{n_{s}1},\dots,V_{n_{s}d}\right)\right):\mathbb{R}^{m}\times\mathbb{R}^{n_{s}\times d}\rightarrow\mathbb{R}^{n_{s}\times d}$
\end_inset

 are the species diffusion velocities.
 The 
\begin_inset Formula $k$
\end_inset

-th spatial component of the viscous stress tensor is given by
\end_layout

\begin_layout Standard
\noindent
\begin_inset Formula 
\begin{equation}
\tau_{k}\left(y,\nabla y\right)=\mu\left(\frac{\partial v_{1}}{\partial x_{k}}+\frac{\partial v_{k}}{\partial x_{1}}-\delta_{k1}\frac{2}{3}\sum_{j=1}^{d}\frac{\partial v_{j}}{\partial x_{j}},\ldots,\frac{\partial v_{d}}{\partial x_{k}}+\frac{\partial v_{k}}{\partial x_{d}}-\delta_{kd}\frac{2}{3}\sum_{j=1}^{d}\frac{\partial v_{j}}{\partial x_{j}}\right),\label{eq:reacting-navier-stokes-viscous-stress-tensor-component}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\noindent
where 
\begin_inset Formula $\mu:\mathbb{R}^{m}\rightarrow\mathbb{R}$
\end_inset

 is the dynamic viscosity.
 The 
\begin_inset Formula $k$
\end_inset

-th spatial component of the heat flux is given as
\begin_inset Formula 
\begin{eqnarray}
q_{k}\left(y,\nabla y\right) & = & -\lambda\sum_{j=1}^{m}T_{y_{j}}\left(y\right)\frac{\partial y_{j}}{\partial x_{k}},\nonumber \\
 & = & -\lambda\frac{\partial T}{\partial x_{k}}.\label{eq:reacting-navier-stokes-heat-flux-component}
\end{eqnarray}

\end_inset

where 
\begin_inset Formula $\lambda:\mathbb{R}^{m}\rightarrow\mathbb{R}$
\end_inset

 is the thermal conductivity and where 
\begin_inset Formula $T_{y_{j}}$
\end_inset

 is the partial derivatives of 
\begin_inset Formula $T$
\end_inset

 with respect to state component 
\begin_inset Formula $y_{j}$
\end_inset

, see
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand ref
reference "sec:Source-term-Jacobian"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
\end_layout

\begin_layout Standard
The transport properties are calculated using mixture averaged properties.
 The 
\begin_inset Formula $k$
\end_inset

-th spatial component of the diffusion velocity for the 
\begin_inset Formula $i$
\end_inset

-th species is given as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\hat{V}_{ik}=\frac{\bar{D}_{i}}{C_{i}}\frac{\partial C_{i}}{\partial x_{k}}-\frac{\bar{D}_{i}}{\rho}\frac{\partial\rho}{\partial x_{k}}.\label{eq:diffusion_velocity}
\end{equation}

\end_inset


\begin_inset Flex RevisionText
status open

\begin_layout Plain Layout
To ensure mass conservation, i.e.
 
\begin_inset Formula $\sum_{i=1}^{n_{s}}W_{i}C_{i}V_{ik}=0$
\end_inset

, a standard correction, see
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "Cof81"
literal "false"

\end_inset

 and
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "Hou11"
literal "false"

\end_inset

, is applied to the species diffusion velocity
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:diffusion_velocity"
plural "false"
caps "false"
noprefix "false"

\end_inset

,
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\revisionmath{V_{ik}=\hat{V}_{ik}-\frac{\sum_{i=1}^{n_{s}}W_{i}C_{i}\hat{V_{ik}}}{\rho}.}\label{eq:diffusion_velocity_mass_corrected}
\end{equation}

\end_inset

The species mixture averaged diffusion coefficients 
\begin_inset Formula $\left(\bar{D}_{1},\ldots,\bar{D}_{n_{s}}\right):\mathbb{R}^{m}\rightarrow\mathbb{R}^{n_{s}}$
\end_inset

, from
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "Kee89"
literal "false"

\end_inset

, are defined for the 
\begin_inset Formula $i$
\end_inset

-th species as
\begin_inset Formula 
\begin{equation}
\bar{D}_{i}=\frac{p_{atm}}{p\bar{W}}\frac{\sum_{j=1,j\ne i}^{n_{s}}X_{j}W_{j}}{\sum_{j=1,j\ne i}^{n_{s}}X_{j}/D_{ij}},\label{eq:diffusion}
\end{equation}

\end_inset

where 
\begin_inset Formula $p_{atm}=101325$
\end_inset

 Pa, 
\begin_inset Formula $X_{j}$
\end_inset

 is the mole fraction of species 
\begin_inset Formula $j$
\end_inset

, 
\begin_inset Formula $D_{ij}$
\end_inset

 is the diffusion coefficient of species 
\begin_inset Formula $i$
\end_inset

 to species 
\begin_inset Formula $j$
\end_inset

, and 
\begin_inset Formula $\bar{W}:\mathbb{R}^{m}\rightarrow\mathbb{R}$
\end_inset

 is the mixture molecular weight, defined as
\begin_inset Formula 
\begin{equation}
\bar{W}=\frac{\rho}{\sum_{i=1}^{n_{s}}C_{i}}.\label{eq:mixture_molecular_weight}
\end{equation}

\end_inset

and the mole fractions 
\begin_inset Formula $\left(X_{1},\ldots,X_{n_{s}}\right):\mathbb{R}^{n_{s}}\rightarrow\mathbb{R}^{n_{s}}$
\end_inset

 can be calculated directly from concentrations, 
\begin_inset Formula 
\begin{equation}
X_{i}=\frac{C_{i}}{\sum_{i=1}^{n_{s}}C_{i}}.\label{eq:mole_fractions}
\end{equation}

\end_inset

The Wilke model
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "Wil50"
literal "false"

\end_inset

 is used to calculate viscosity
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\mu & = & \sum_{i=1}^{n_{s}}\frac{X_{i}\mu_{i}}{X_{i}+\sum_{i=1,i\ne j}^{n_{s}}\left(X_{j}\phi_{ij}\right)},\label{eq:viscosity}
\end{eqnarray}

\end_inset

where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\phi_{ij} & = & \frac{\left(1+\left(\frac{W_{j}}{W_{i}}\right)^{1/4}\sqrt{\left(\frac{\mu_{i}}{\mu_{j}}\right)}\right)^{2}}{\sqrt{8\left(1+\frac{W_{i}}{W_{j}}\right)}},
\end{eqnarray*}

\end_inset

and 
\begin_inset Formula $\mu_{i}$
\end_inset

 and 
\begin_inset Formula $\mu_{j}$
\end_inset

 are the species specific viscosities for species 
\begin_inset Formula $i$
\end_inset

 and 
\begin_inset Formula $j$
\end_inset

, respectively.
 The Mathur model
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "Mat67"
literal "false"

\end_inset

 is used to calculate conductivity,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\lambda=\frac{1}{2}\left(\sum_{i=1}^{n_{s}}X_{i}\lambda_{i}+\frac{1}{\sum_{i=1}^{n_{s}}\frac{X_{i}}{\lambda_{i}}}\right),\label{eq:conductivity}
\end{equation}

\end_inset

where 
\begin_inset Formula $\lambda_{i}$
\end_inset

 is the conductivity of species 
\begin_inset Formula $i$
\end_inset

.
\end_layout

\begin_layout Standard
Finally, the source term, which includes the detailed chemical kinetics,
 is given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}\left(y\right)=\left(0,\ldots,0,0,\omega_{1},\ldots,\omega_{n_{s}}\right),\label{eq:reacting-navier-stokes-source-term}
\end{equation}

\end_inset

where 
\begin_inset Formula $\omega_{i}$
\end_inset

 is the production rate of species 
\begin_inset Formula $i$
\end_inset

, which is the sum of the progress reaction rates from any arbitrary number
 of reactions and reaction types, cf.
\begin_inset space ~
\end_inset


\begin_inset CommandInset citation
LatexCommand citep
key "chemkin89"
literal "false"

\end_inset

.
 
\end_layout

\begin_layout Subsection
\begin_inset Flex RevisionText
status open

\begin_layout Plain Layout
