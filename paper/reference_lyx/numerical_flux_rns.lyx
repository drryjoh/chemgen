\begin_inset Formula $x=0.225$
\end_inset

 m and a helium bubble to the left of the shock,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\left(v_{1},v_{2}\right) & = & \begin{cases}
\left(M_{2}c_{2}-M_{1}c_{1},0\right) & x\geq0.225\\
\left(0,0\right)\text{ m/s} & x<0.225
\end{cases},\nonumber \\
